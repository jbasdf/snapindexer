<div class="result">
  <div class="header">
    <a {{bind-attr href=url}} class="url" target="_blank">{{ name }}</a>
    <button type="button" class="close">&#215;</button>
  </div>
  <div class="content">
    <div class="main">
      <div class="image">
        {{#link-to 'result' this}}
          <img {{bind-attr alt=name src=image}} />
        {{/link-to}}
      </div>
    </div>
    <div class="meta">
      <p class="description">{{description}} <a {{bind-attr href=url}} target="_blank">View More</a></p>
      <div class="snapindexer-social-controls">
        <button class="snapindexer-linkFB" {{action 'postFB'}}></button>
        <button class="snapindexer-linkTwitter" {{action 'postTwitter'}}></button>
        <button class="snapindexer-linkPinterest" {{action 'postPinterest'}}></button>
      </div>
    </div>
    {{#if on_sale}}
      <div class="sale_tag_start"></div>
      <div class="sale_tag">
        <a target="_blank" {{bind-attr href=url}}>${{ sale_price }}<br />
        <span class="sale_tag_save">Save {{ percent_discount }}%</span></a>
      </div>
    {{/if}}
  </div>
  <div class="footer">
    <div class="view_now"><a {{bind-attr href=url}} class="btn" target="_blank">View Now</a></div>
    <div class="merchant"><a {{bind-attr href=url}} target="_blank">{{ merchant_name }}</a></div>
    <div {{bind-attr class=":price saleClass"}}><a {{bind-attr href=url}} target="_blank">${{ current_price }}</a></div>
  </div>
</div>